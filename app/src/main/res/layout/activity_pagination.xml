<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/pageNumberLayout"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Pagination">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclePage"
        android:layout_width="match_parent"
        android:layout_height="550dp">

    </androidx.recyclerview.widget.RecyclerView>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">



            <TextView
                android:text="Previous"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#C33535"
                android:id="@+id/previous_button"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content">

            </TextView>


        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progressPaginationId"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ProgressBar>

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <TextView
                android:text="Next"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#C33535"
                android:textAlignment="center"
                android:id="@+id/next_button"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content">

            </TextView>



        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/previous_page_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous "
            android:textColor="#102ABA"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/page_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="#102ABA"
            android:textSize="18sp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text=". . . . ."
            android:textColor="#102ABA"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

    </LinearLayout>


</LinearLayout>